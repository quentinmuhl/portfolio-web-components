{% macro show(title, cta) %}
<div class='card-blog'>
    <div class='card__img'>
        <img src='https://www.fillmurray.com/300/360' />
    </div>
    <div class='card__desc'>
        <h2 class='desc__title'>{{ title }}</h2>
        <a class='button'>{{ cta }} ></a>
    </div>
</div>
{% endmacro %}